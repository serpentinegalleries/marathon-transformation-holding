<!DOCTYPE html>
<html lang="en">
<head>
	<!-- Meta -->
	<meta charset="utf-8" />
	<meta http-equiv="content-type" content="text/html; charset=utf-8" />

	<!-- Use the .htaccess and remove these lines to avoid edge case issues.
		 More info: h5bp.com/i/378 -->
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<!-- Our site title and description -->
	<title><%= @getPreparedTitle() %></title>
	<meta name="description" content="<%= @getPreparedDescription() %>" />
	<meta name="keywords" content="<%= @getPreparedKeywords() %>" />
	<meta name="author" content="<%= @site.author or '' %>" />


	<meta property="og:title" content="<%= @getPreparedTitle() %>" />
	<meta property="og:type" content="website" />
	<meta property="og:description" content="<%= @getPreparedDescription() %>" />
	<meta property="og:url" content="http://radio.serpentinegalleries.org" />
	<meta property="og:image" content="http://radio.serpentinegalleries.org/images/transformation_opengraph.png" />

	<!-- Output DocPad produced meta elements -->
	<%- @getBlock('meta').toHTML() %>

	<!-- Mobile viewport optimized: h5bp.com/viewport -->
	<meta name="viewport" content="width=device-width" />

	<!-- Icons -->
		<link rel="shortcut icon" href="images/icons/favicon.png">

	<!-- Shims: IE6-8 support of HTML5 elements -->
	<!--[if lt IE 9]>
		<script async src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->

	<!-- Styles -->
	<%- @getBlock('styles').add(@site.styles).toHTML() %>
</head>
<body>

 <div class="container">
	<div class="row heading">
		<!-- Logo -->
		<div class="col-sm-12 col-md-6 col-lg-6">
			  <img src="/images/logo.png">
		   </hgroup>
		</div>
		<!--- Weather Stream -->
		<div class="col-sm-12 col-md-6 col-lg-6 weather-icons">
		  <div>
			 <img id="icon-weather" src="/images/clear_icon.png">
		  </div>
		  <div>
			 <img id="icon-wind" src="/images/wind_icon.png">                                    
		  </div>
		  <div class="row" id="text-weather">
		  </div>
		</div>
	</div>
</div>

	<!-- Content -->
	<div class="container">
		<!-- Content -->
			<%- @content %>

	</div><!-- /container -->

    <footer>
        <div class="container">
                <div class="row">
                	<div class="col-lg-12">
	                    <img class="footer-logo" src="/images/logo.png">
					</div>  
                </div>
                <div class="row">
                	<div class="col-lg-12">
	                    <img class="pull-right" src="/images/serpentine_marathon.png">
					</div>  
                </div>
                <div class="row">
                    <div class="col-lg-12">
                    	<div class="social-icons pull-right">
                    		<h5><a href="//twitter.com/SerpentineUK"><i class="fa fa-twitter"></i></a>
                    		<a href="//instagram.com/serpentineuk"><i class="fa fa-instagram"></i></a>
                    		<a href="//vimeo.com/serpentinegalleries"><i class="fa fa-vimeo"></i></a>
                    		<a href="//facebook.com/SerpentineGalleries"><i class="fa fa-facebook"></i></a></h5>          
                    	</div>
                	</div>
            	</div>
        	</div>
        </div>
    </footer>


	<!-- Scripts -->
	<%- @getBlock('scripts').add(@site.scripts).toHTML() %>
</body>
</html>
